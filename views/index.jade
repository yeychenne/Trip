//- index.jade
doctype html
html(lang='en')
    head
        title Login
        //- load bootstrap css
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css") 
        //- Load fonts
        link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css") 
        script(src='/js/facebook.js')

    
    body(style='padding-top:80px;')
        div.container
            div.jumbotron.text-center
                h2
                    | Welcome to Trip Planner

                a.btn.btn-default(href="/login")
                    span.fa.fa-sign-in  Login

                p Or Register with:

                a.btn.btn-default(href="/signup")
                    span.fa.fa-user-plus  Email
                a.btn.btn-default(href="/auth/google") 
                    span.fa.fa-google-plus  Google

                <br>
                a.btn.btn-default(href="/auth/facebook") 
                    span.fa.fa-facebook  Facebook
                a.btn.btn-default(href="/auth/twitter") 
                    span.fa.fa-twitter  Twitter
                
                
                p
                    div.fb-like(data-href="https://www.facebook.com/SciShow" data-layout="button_count" data-action="like" data-show-faces="true" data-share="false")
        
    